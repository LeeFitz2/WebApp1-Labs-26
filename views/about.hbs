{{> menu id="about"}}

<section class="ui left aligned middle aligned segment">

    <h2>About Playlist App</h2>
    <p>
        About the Playlist App.
    </p>
    <div class="ui cards">

    {{#each employees}}
    <div class="ui centered card">
        <div class="image">
            <img src="{{image}}">
        </div>
        <div class="content">
            <a class="header"> {{fullname}} </a>
            <div class="meta">
                <span class="date">Joined in {{joined}} </span>
            </div>
            <div class="description">
               {{name}} is a {{job}} living in {{city}}.
            </div>
        </div>
        <div class="extra content">
            <a>
                <i class="user icon"></i>
                {{mates}} contacts
            </a>
        </div>
    </div>
    {{/each}}
    </div>

</section>